{
	"env": {
		"node": true,
		"es2021": true,
		"es6": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows",
			"unix"
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none"
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"space-before-function-paren": [
			"error",
			"never"
		],
		"semi": [
			"error",
			"never"
		]
	}
}